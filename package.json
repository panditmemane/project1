{
  "name": "isomorphic",
  "description": "react redux admin dashboard",
  "version": "3.0.6",
  "private": true,
  "author": "FindingPi",
  "workspaces": [
    "shared/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna clean --yes && rimraf node_modules",
    "clean:build": "lerna exec -- rimraf \"{.next,dist,out,build,.docz}\"",
    "dev": "yarn workspace @iso/next run dev",
    "build": "yarn workspace @iso/next run build",
    "start": "yarn workspace @iso/next run start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css}": [
      "prettier --trailing-comma es5 --single-quote --write"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "redux-devtools-extension": "^2.13.8",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2"
  },
  "dependencies": {
    "@uppy/image-editor": "^0.2.6",
    "@uppy/react": "^1.11.10",
    "react-webcam": "^5.2.4"
  }
}
